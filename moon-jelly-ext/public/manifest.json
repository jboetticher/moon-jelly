{
  "manifest_version": 2,

  "name": "Moon Jelly Extension",
  "description": "An expansion on the jellyfish cross-browser extension to help with publishing and accessing the ocean protocol.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "jellyfish-48.png",
    "48": "jellyfish-48.png",
    "128": "jellyfish-128.png",
    "512": "jellyfish-512.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "content_security_policy": "default-src 'self' https://*.oceanprotocol.com; script-src 'self' ; font-src 'self'"
}
